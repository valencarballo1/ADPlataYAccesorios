<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>


        .container-is {
            margin-top: 100px;
            max-width: 400px;
            background-color: #fff;
            padding: 30px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
            color: #eb636b;
            font-size: 24px;
        }

        .form-group label {
            font-weight: bold;
            color: #333;
        }

        .form-group input[type="email"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .form-group input[type="checkbox"] {
            margin-top: 10px;
        }

        button[type="submit"] {
            background-color: #eb636b;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        a.btnRegistro {
            background-color: #eb636b;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        button[type="submit"]:hover {
            background-color: #d1464c;
        }

        a.btnRegistro:hover {
            background-color: #d1464c;
        }
    </style>
</head>
<body>
    <div class="container container-is">
        <h1>Inicio de sesión</h1>
        <form id="loginForm" method="post" action="@Url.Action("InicioSesion")">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required class="form-control" />
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" name="pass" id="password" required class="form-control" />
            </div>
            <div class="form-group">
                <input type="checkbox" name="recordarme" id="rememberMe" value="true" />
                <label for="rememberMe">Recordarme</label>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
            <a class="btn btn-primary btnRegistro" href="@Url.Action("Registrarme", "Usuario")">Registrarme</a>
        </form>
    </div>

    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault(); // Evita el envío del formulario

                var recordarme = $('#rememberMe').prop('checked');

                // Realizar la petición AJAX para el inicio de sesión
                $.ajax({
                    url: $(this).attr('action'),
                    type: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Inicio de sesión correcto',
                                showConfirmButton: false,
                                timer: 1500 // Mostrar el mensaje por 5 segundos
                            }).then(function() {
                                // Redirigir a la vista Producto/VerTodos después de 5 segundos
                                window.location.href = '@Url.Action("VerTodos", "Producto")';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Ocurrió un error al iniciar sesión'
                        });
                    }
                });
            });
        });
    </script>
</body>
</html>
