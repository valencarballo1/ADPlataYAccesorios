
@{
    ViewBag.Title = "Index";
}
<style>
    /* Estilos del banner */
    .banner {
        background-color: #f8f8f8;
        padding: 20px;
        text-align: center;
    }

        .banner h1 {
            font-size: 30px;
            color: #333;
        }

        .banner p {
            font-size: 18px;
            color: #666;
        }

    /* Estilos del carrusel */
    .carousel-item {
        text-align: center;
    }

        .carousel-item img {
            max-width: 100%;
            max-height: 200px;
            margin: auto;
        }

        .carousel-item h4 {
            margin-top: 10px;
            font-size: 18px;
            color: #333;
        }

        .carousel-item p {
            color: #666;
        }
</style>

